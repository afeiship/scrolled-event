{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": false,
    "noImplicitAny": false
  },
  "lib": [
    "es2015",
    "dom"
  ],
  "include": [
    "src",
    "__tests__"
  ]
}
